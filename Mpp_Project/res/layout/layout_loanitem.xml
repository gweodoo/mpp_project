<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/itemLayout"
            android:background="#ffffff"
            android:weightSum="1"
            >

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/picUser"
                android:layout_weight="0.10"
                android:background="#ff0500"
                android:layout_margin="5dp"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/arrow"
                android:longClickable="false"
                android:background="#2737ff"
                android:layout_alignTop="@+id/picUser"
                android:layout_toRightOf="@+id/picUser"
                android:layout_marginRight="15dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Information"
                android:id="@+id/infoItem"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/arrow"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="10.00 â‚¬"
                android:id="@+id/amountItem"
                android:layout_gravity="center_vertical"
                android:textColor="#979593"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/isPaid"/>

        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paid"
                android:id="@+id/isPaid"
                android:layout_weight="0.10"
                android:layout_gravity="center_vertical"
                android:textSize="10dp"
                android:layout_marginRight="23dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
</RelativeLayout>